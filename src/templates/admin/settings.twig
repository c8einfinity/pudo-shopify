{% extends "base.twig" %}

{% block content %}
    <div class="container">
        {% if request.message %}
            <div class="alert alert-info">{{ request.message }}</div>
        {% endif %}

        {% if request.error %}
            <div class="alert alert-error">{{ request.error }}</div>
        {% endif %}

        <h1>Settings</h1>
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <!-- All the data -->
                    <input class="form-control" type="text" placeholder="Pudo API Key" name="pudoApiKey" value="{{ pudoShopSettings.pudoApiKey }}">
                    <input class="form-control" type="text" placeholder="Pudo API Url" name="pudoApiUrl" value="{{ pudoShopSettings.pudoApiUrl }}">
                    <input type="hidden" name="shop" value="{{ accessToken.shop }}">
                    <button class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>

        {{ dump(pudoShopSettings) }}
    </div>
{% endblock %}