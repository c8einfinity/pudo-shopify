{% extends "base.twig" %}

{% block content %}
    <div class="container">
        {% if request.message %}
            <div class="alert alert-info">{{ request.message }}</div>
        {% endif %}

        {% if request.error %}
            <div class="alert alert-danger">{{ request.error }}</div>
        {% endif %}

        <h1>Settings</h1>
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <!-- All the data -->
                    <label>
                        <input class="form-control" type="text" placeholder="Pudo API Key" name="pudoApiKey" value="{{ pudoShopSettings.pudoApiKey }}">
                    </label>
                    <label>
                        <input class="form-control" type="text" placeholder="Pudo API Url" name="pudoApiUrl" value="{{ pudoShopSettings.pudoApiUrl }}">
                    </label>
                    <input type="hidden" name="shop" value="{{ accessToken.shop }}">
                    <button class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>

        <div class="form-group">
            <label for="taxable">Published</label>
            <input type="checkbox" name="taxable" value="1" {%  if (pudoShopSettings.taxable == 1 ) %} checked {% endif%} >
        </div>

        <select name="test">
            {% for option in options %}
                <option value="{{ option }}"   {%  if (pudoShopSettings.isPublished == 1 ) %} selected {% endif%} >{{ option }}</option>
            {% endfor %}
        </select>

        {{ dump(pudoShopSettings) }}
    </div>
{% endblock %}